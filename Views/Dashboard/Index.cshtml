@model DashboardViewModel
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["Welcome,"] @Model.CurrentUserName</h2>

<h3>@Localizer["Latest Articles"]</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["Title"]</th>
            <th>@Localizer["Created At"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.Title</td>
                <td>
                    @* صلاحيات بسيطة *@
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        <a asp-controller="Articles" asp-action="Edit" asp-route-id="@article.ArticleId" class="btn btn-sm btn-warning">@Localizer["Edit"]</a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Articles" asp-action="Delete" asp-route-id="@article.ArticleId" class="btn btn-sm btn-danger">@Localizer["Delete"]</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{
    <a asp-controller="Articles" asp-action="Create" class="btn btn-primary">@Localizer["Add New Article"]</a>
}
