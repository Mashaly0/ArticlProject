@model ArticlProject.Models.Article

<div class="container mt-4">

    <div class="card shadow-sm">
        <img src="~/images/Articles/@Model.Image" class="card-img-top" />

        <div class="card-body">
            <span class="badge bg-primary mb-2">@Model.Type</span>

            <h3 class="fw-bold">@Model.Title</h3>

            <p class="mt-3">
                @Model.Description
            </p>

            <a asp-action="Index" class="btn btn-secondary mt-3">عودة</a>
        </div>
    </div>

</div>
