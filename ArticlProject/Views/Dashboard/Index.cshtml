@model DashboardViewModel
@using Microsoft.AspNetCore.Identity

<h2> Welcome @Model.CurrentUserName</h2>

<h3>"Latest Articles"</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th> Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.Title</td>
                <td>
                    @* صلاحيات بسيطة *@
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        <a asp-controller="Articles" asp-action="Edit" asp-route-id="@article.ArticleId" class="btn btn-sm btn-warning">Edit</a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Articles" asp-action="Delete" asp-route-id="@article.ArticleId" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{
    <a asp-controller="Articles" asp-action="Create" class="btn btn-primary">Add New Article</a>
}
