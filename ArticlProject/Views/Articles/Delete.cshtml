@model ArticlProject.Models.Article

@{
    ViewData["Title"] = "حذف مقال";
}

<div class="container mt-5">

    <h2 class="text-danger fw-bold mb-4">هل أنت متأكد أنك تريد حذف هذا المقال؟</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <p class="mb-2"><strong>عنوان المقال:</strong> @Model.Title</p>

            <p class="mb-2"><strong>الوصف:</strong> @Model.Description</p>

            <p class="mb-2"><strong>النوع:</strong> @Model.Type</p>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <div class="mt-3">
                    <strong>الصورة الحالية:</strong><br />
                    <img src="~/images/Articles/@Model.Image" class="img-fluid rounded mt-2" style="max-width:250px;" />
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ArticleId" />

        <button type="submit" class="btn btn-danger px-4">
            حذف
        </button>

        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
            رجوع
        </a>
    </form>

</div>
