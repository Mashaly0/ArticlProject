@model List<ArticlProject.Models.Article>

@{
    ViewData["Title"] = "مقالاتي";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>مقالاتي</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> مقال جديد
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var article in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(article.Image))
                        {
                            <img src="~/images/Articles/@article.Image" class="card-img-top" alt="@article.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text flex-grow-1">
                                @(article.Description.Length > 100 ? article.Description.Substring(0, 100) + "..." : article.Description)
                            </p>
                            <div class="mt-auto">
                                <span class="badge bg-info">@article.Type</span>
                                <div class="btn-group mt-2 w-100">
                                    <a asp-action="Details" asp-route-id="@article.ArticleId" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@article.ArticleId" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@article.ArticleId" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-2x mb-3"></i>
            <h4>لا توجد مقالات</h4>
            <p>لم تقم بنشر أي مقالات بعد.</p>
            <a asp-action="Create" class="btn btn-primary">ابدأ بنشر أول مقال</a>
        </div>
    }
</div>