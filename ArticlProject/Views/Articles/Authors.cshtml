@model List<ArticlProject.Models.Author>

@{
    ViewData["Title"] = "الناشرون";
}

<div class="container">
    <h1 class="text-center mb-4">الناشرون</h1>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var author in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(author.Image))
                        {
                            <img src="~/images/Authors/@author.Image" class="card-img-top" alt="@author.Name" style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                <i class="fas fa-user fa-5x text-muted"></i>
                            </div>
                        }

                        <div class="card-body text-center">
                            <h5 class="card-title">@author.Name</h5>
                            <p class="card-text">
                                @(author.About.Length > 100 ? author.About.Substring(0, 100) + "..." : author.About)
                            </p>
                        </div>

                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-newspaper"></i>
                                    @author.Articles.Count مقال
                                </small>
                                <a asp-controller="Authors" asp-action="Articles" asp-route-id="@author.AuthorId"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-list"></i> عرض المقالات
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
            <h4>لا يوجد ناشرون</h4>
            <p>لا توجد حسابات ناشرين في النظام حالياً.</p>
        </div>
    }
</div>